<%- include('head') %>
<h2><%= title %></h2>

<% if (typeof coincidencia !== 'undefined' && coincidencia) { %>
    <p>No se encontraron resultados</p>
<% } else { %>
    <div class="Container">
        <% for (let i = 0; i < cartelera.length; i++) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= cartelera[i].titulo %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= cartelera[i].categoria %></h6>
                    <p class="card-text"><%= cartelera[i].resumen %></p>
                    
                    <% if (cartelera[i].temporadas > 0) { %>
                        <p class="card-text">Temporadas: <%= cartelera[i].temporadas %></p>
                    <% } %>
                    
                    <p class="card-text">GÃ©nero: <%= cartelera[i].genero %></p>
                </div>
            </div>
        <% } %>
    </div>
<% } %>
<%- include('footer') %>